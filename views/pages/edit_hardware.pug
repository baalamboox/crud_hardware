extends ../layouts/main_layout.pug
block main_container 
    .row.w-100.mx-auto.justify-content-center.mt-5
        .col-md-5 
            .card.p-2
                .hardware-card.card-body 
                    form(action=`/update/${data._id}`, method="post", enctype="multipart/form-data") 
                        .container-photo-input.text-center 
                                img.hardware-profile.rounded-circle.shadow-lg.border#photo(src=data.hardware_photo, alt="Loading...")
                                span.btn-upload.btn.btn-secondary.mt-3.mb-5
                                    i.fa-solid.fa-upload.me-2 
                                    input#hardware_photo(type="file", name="hardware_photo")
                        .data-container-upload.text-secondary 
                            .form-floating.mb-3
                                input.form-control#hardware_name(type="text", name="hardware_name", placeholder="Nombre", value=data.hardware_name)
                                label.form-label(for="") 
                                    i.fa-solid.fa-font.me-2
                                    |Nombre
                            .row 
                                .col-md-6 
                                    .form-floating.mb-3
                                        input.form-control#hardware_name(type="text", name="hardware_brand", placeholder="Marca", value=data.hardware_brand)
                                        label.form-label(for="") 
                                            i.fa-solid.fa-copyright.me-2
                                            |Marca
                                .col-md-6                         
                                    .form-floating.mb-3
                                        input.form-control#hardware_name(type="text", name="hardware_model", placeholder="Nombre", value=data.hardware_model)
                                        label.form-label(for="") 
                                            i.fa-solid.fa-cubes.me-2 
                                            |Modelo 
                            .form-floating.mb-3 
                                        input.form-control#hardware_year(type="date", name="hardware_year", placeholder="Año de lanzamiento", value=data.hardware_year)
                                        label.form-label(for="hardware_year") 
                                            i.fa-solid.fa-calendar-days.me-2
                                            |Año de lanzamiento
                            .form-floating.mb-3
                                        textarea.form-control#floatingTextarea2(placeholder="Descripcion", style="height: 100px", name="hardware_description")=data.hardware_description
                                        label(for="floatingTextarea2") 
                                            i.fa-solid.fa-message.me-2
                                            |Descripción
                            .text-end.mt-4 
                                .btn-group 
                                    a.btn.btn-secondary(href="/registered") 
                                        i.fa-solid.fa-xmark.me-2
                                        |Cancelar
                                    button.btn.btn-warning(type="submit") 
                                        i.fa-solid.fa-pen-to-square.me-2
                                        |Actualizar