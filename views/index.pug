extends ./layouts/main_layout.pug
block main_container 
    .row.w-100.mx-auto 
        .col 
            form.rounded.shadow-lg.p-5.bg-light(action="/create" method="POST", enctype="multipart/form-data")
                .row 
                    .col-md-4 
                        .container-photo-input.text-center 
                            h4.fw-light.mb-3 Sube una foto del producto desde tu equipo
                            img.rounded-circle.shadow-lg.border#photo(src="/static/img/default/photo.png", alt="Loading...")
                            span.btn.btn-secondary.mt-3.mb-5
                                i.fa-solid.fa-upload.me-2 
                                input#hardware_photo(type="file", name="hardware_photo")
                    .col-md-8 
                        .row 
                            .col-md-12 
                                .form-floating.mb-3 
                                    input.form-control#hardware_name(type="text", name="hardware_name", placeholder="Nombre")
                                    label.form-label(for="hardware_name") 
                                        i.fa-solid.fa-font.me-2
                                        |Nombre
                        .row 
                            .col-md-6 
                                .form-floating.mb-3 
                                    input.form-control#hardware_brand(type="text", name="hardware_brand", placeholder="Marca")
                                    label.form-label(for="hardware_brand") 
                                        i.fa-solid.fa-copyright.me-2
                                        |Marca
                            .col-md-6 
                                .form-floating.mb-3 
                                    input.form-control#hardware_model(type="text", name="hardware_model", placeholder="Nombre")
                                    label.form-label(for="hardware_model") 
                                        i.fa-solid.fa-cubes.me-2 
                                        |Modelo
                        .row 
                            .col-md-6 
                                .form-floating.mb-3 
                                    input.form-control#hardware_year(type="date", name="hardware_year", placeholder="Año de lanzamiento")
                                    label.form-label(for="hardware_year") 
                                        i.fa-solid.fa-calendar-days.me-2
                                        |Año de lanzamiento
                        .row 
                            .col-md-12 
                                .form-floating
                                    textarea#floatingTextarea2.form-control(placeholder="Leave a comment here", style="height: 100px", name="hardware_description")
                                    label(for="floatingTextarea2") 
                                        i.fa-solid.fa-message.me-2
                                        |Descripción
                        .row
                            .col-12.text-end 
                                .btn-group.mt-5 
                                    span.btn.btn-secondary 
                                        i.fa-solid.fa-xmark.me-2 
                                        |Cancelar
                                    button.btn.btn-primary(type="submit") 
                                        i.fa-solid.fa-floppy-disk.me-2 
                                        |Guardar